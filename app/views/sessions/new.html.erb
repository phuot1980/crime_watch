<h1>Login</h1>

<%= form_for :login do |f| %>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
    <%= f.submit "Log in now!" %>
<% end %>

<%= link_to 'back to home page', root_path %>